<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.OneFragment">

    <com.youth.banner.Banner
        android:id="@+id/goodBan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"/>
    <TextView
        android:id="@+id/mGoodsDescTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:paddingLeft="@dimen/common_padding_middle"
        android:paddingRight="@dimen/common_padding_middle"
        android:paddingTop="@dimen/common_padding_middle"
        />
    <TextView
        android:id="@+id/mGoodsPriceTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_padding_middle"
        android:textColor="@color/red"
        android:textSize="@dimen/dp_16" />

    <RelativeLayout
        android:id="@+id/mSkuView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/common_margin"
        android:padding="@dimen/common_padding_middle">
        <TextView
            android:id="@+id/mSkuLabelTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_12"
            android:textColor="@color/burlywood"
            android:text="已选"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/mSkuSelectedTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkblue"
            android:text="8961蓝色，L,1件"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/mSkuLabelTv"
            android:layout_marginLeft="@dimen/card_common_margin_left"
            android:layout_toLeftOf="@+id/mMoreIv"
            android:layout_marginRight="@dimen/cardview_default_radius"
            android:maxLines="1"
            android:ellipsize="end"/>
        <ImageView
            android:id="@+id/mMoreIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_horiz_black"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>