<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="5dp"
    app:contentPadding="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_toRightOf="@id/img"
            android:layout_margin="15dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_title2"
            android:layout_below="@id/img"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <cn.jzvd.JZVideoPlayerStandard
            android:id="@+id/jz"
            android:layout_below="@id/tv_title2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_250"/>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp_5"
            app:cardMaxElevation="@dimen/dp_2"
            app:cardUseCompatPadding="true"
            android:layout_below="@id/jz"
            >
        <TextView
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_zhi"/>
        </androidx.cardview.widget.CardView>
        <ImageView
            android:id="@+id/img2"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_below="@id/jz"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_30"
           android:src="@mipmap/f1" />

        <TextView
            android:id="@+id/tv_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jz"
            android:layout_toRightOf="@id/img2" />
        <ImageView
            android:id="@+id/img_zan"
            android:layout_below="@id/jz"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_width="@dimen/dp_25"
            android:visibility="invisible"
            android:src="@mipmap/f4"
            android:layout_height="@dimen/dp_25"/>
        <TextView
            android:id="@+id/tv_zan"
            android:layout_below="@id/jz"
            android:layout_toRightOf="@id/img_zan"
            android:text="11"
            android:layout_marginTop="@dimen/dp_25"
            android:textSize="20sp"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"/>
        <ImageView
            android:id="@+id/img_cai"
            android:layout_below="@id/jz"
            android:layout_toRightOf="@id/tv_zan"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_width="@dimen/dp_25"
            android:src="@mipmap/f2"
            android:layout_height="@dimen/dp_25"/>
        <TextView
            android:id="@+id/tv_cai"
            android:layout_below="@id/jz"
            android:layout_toRightOf="@id/img_cai"
            android:text="11"
            android:layout_marginTop="@dimen/dp_25"
            android:textSize="20sp"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"/>
        <ImageView
            android:id="@+id/img_xin"
            android:layout_below="@id/jz"
            android:layout_toRightOf="@id/tv_cai"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_width="@dimen/dp_30"
            android:src="@mipmap/f6"
            android:layout_height="@dimen/dp_30"/>
        <TextView
            android:id="@+id/tv_xin"
            android:layout_below="@id/jz"
            android:layout_toRightOf="@id/img_xin"
            android:text="11"
            android:textSize="20sp"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"/>
        <ImageView
            android:id="@+id/img_zhuan"
            android:layout_below="@id/jz"
            android:layout_toRightOf="@id/tv_xin"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_width="@dimen/dp_30"
            android:src="@mipmap/f3"
            android:layout_height="@dimen/dp_30"/>
        <TextView
            android:id="@+id/tv_zhuan"
            android:layout_below="@id/jz"
            android:layout_toRightOf="@id/img_zhuan"
            android:text="11"
            android:layout_marginTop="@dimen/dp_25"
            android:textSize="20sp"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>